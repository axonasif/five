{
	"shellcheck.enable": true,
	"shellcheck.enableQuickFix": true,
	"shellcheck.exclude": [
		"2154",
		"1090",
		"1091",
		"2086",
		"2015",
		"2001",
		"2164",
	],
	"shellcheck.customArgs": [
		"-s",
		"bash"
	],
	"files.autoGuessEncoding": true,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"files.exclude": {
		"**/target": true
	},
}